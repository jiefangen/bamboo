<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.panda.modules.system.dao.RoleDao">
    <resultMap id="BaseRoleMap" type="org.panda.modules.system.domain.po.RolePO">
        <id column="role_id" property="id" jdbcType="BIGINT"/>
        <result column="role_name" property="roleName" jdbcType="VARCHAR"/>
        <result column="role_code" property="roleCode" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="roleColumns"> role_name, role_code, description, create_time, update_time </sql>

    <select id="findByUserId" resultMap="BaseRoleMap">
        SELECT
            r.id role_id, r.role_name, r.role_code, r.description, r.create_time, r.update_time
        FROM sys_role r, sys_user_role ur
        WHERE r.id = ur.role_id
         and ur.user_id = #{userId,jdbcType=BIGINT}
    </select>

    <select id="findRoles" resultMap="BaseRoleMap">
        SELECT
            r.id role_id, r.role_name, r.role_code, r.description, r.create_time, r.update_time
        FROM sys_role r
    </select>

    <select id="findByRoleName" resultMap="BaseRoleMap">
        SELECT
        id role_id,
        <include refid="roleColumns"/>
        FROM sys_role WHERE role_name = #{roleName,jdbcType=VARCHAR}
    </select>

    <insert id="insertRole">
        insert into sys_role (<include refid="roleColumns"/>)
        values(#{role.roleName}, #{role.roleCode}, #{role.description}, now(), now())
    </insert>

    <delete id="deleteRole">
        delete from sys_role where id = #{roleId}
    </delete>
</mapper>